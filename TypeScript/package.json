{
  "name": "flowcrypt-android-node",
  "version": "0.0.1",
  "description": "Node.js bundle for FlowCrypt Android internal use.",
  "dependencies": {
    "openpgp": "3.1.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/chrome": "0.0.65",
    "@types/node": "10.12.10",
    "@babel/core": "7.1.6",
    "ava": "1.0.0-rc.2",
    "babel-loader": "8.0.4",
    "babel-preset-env": "1.7.0",
    "tslint": "5.11.0",
    "typescript": "3.0.1",
    "webpack": "4.26.1",
    "webpack-cli": "3.1.2",
    "webpack-node-externals": "1.7.2"
  },
  "scripts": {
    "prebuild": "rm -rf build/ts build/final/*",
    "_buildTs": "cd .. && ./TypeScript/node_modules/typescript/bin/tsc --project tsconfig.json",
    "_buildBundles": "webpack --config webpack.config.js",
    "_buildFinalWip": "cat build/bundles/openpgp-bundle.js build/bundles/flowcrypt-bundle.js > build/final/flowcrypt-android-wip.js",
    "_buildFinal": "node tooling/build-final.js",
    "build": "npm run-script _buildTs && npm run-script _buildBundles && npm run-script _buildFinalWip && npm run-script _buildFinal",
    "deploy": "npm run-script build && cp build/final/flowcrypt-android.js ../FlowCrypt/src/main/assets/js/flowcrypt-android.js",
    "pretest": "echo skipping pretest",
    "test": "echo tests not implemented yet",
    "preupdateCore": "rm -rf source/core source/lib",
    "updateCore": "npm run-script _updateCoreLib && npm run-script _updateCoreSrc && npm run-script _updateCoreTypes",
    "_updateCoreSrc": "cp -r ../../flowcrypt-browser/extension/js/common/core source/core",
    "_updateCoreLib": "mkdir source/lib && cd source/lib && LIBD='../../../../flowcrypt-browser/extension/lib' && cp -r $LIBD/emailjs . && cp $LIBD/openpgp.js . && cp $LIBD/iso-*.js . && cp $LIBD/zxcvbn.js .",
    "_updateCoreTypes": "cp -r ../../flowcrypt-browser/extension/types source/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlowCrypt/flowcrypt-android-node.git"
  },
  "author": "FlowCrypt Limited",
  "license": "SEE LICENSE IN <LICENSE>",
  "private": true,
  "bugs": {
    "url": "https://github.com/FlowCrypt/flowcrypt-android-node/issues"
  },
  "homepage": "https://flowcrypt.com"
}